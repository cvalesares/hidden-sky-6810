<h3> Flights </h3>

<% @flights.each do |flight| %>
<div id="id-<%=flight.id%>">
  <h4><%= flight.number %>
  <%= flight.airline.name %><p></h4>
  <% flight.passengers.each do |passenger| %>
    <%= passenger.name %>
    <%= button_to "Remove #{passenger.name}", "/flight_passengers/#{passenger.id}", method: :delete %><p>
  <% end %>
<% end %>
